<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<%=link_to "create a new task", new_task_path  %>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to link_to task.name, task_path(task) %> <%= link_to link_to " edit", edit_task_path(task) %>   <%= link_to "delete", task_path(task), method: 'delete', data: { confirm: "Are you sure?" } %> </li>
  <% end %>
</ul>

